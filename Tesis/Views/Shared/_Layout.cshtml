<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tesis</title>




    <!-- JS -->
    <script type="text/javascript" src="/js/site.js"></script>
    <script type="text/javascript" src="/lib/jquery.js"></script>
    <script src="/lib/Bootstrap/js/bootstrap.js"></script>
    <script type="text/javascript" src="/lib/brain.js"></script>
    <script type="text/javascript" src="/js/jspdf.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/lib/Bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/lib/Bootstrap/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="/lib/Bootstrap/css/bootstrap-reboot.css" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inventory.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/selling.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!--Not used yet-->

    <!-- Doesnt use anything for Development for now -->
    <environment include="Development">
    </environment>

</head>
<body>
    <!--Navbar VII-->


    <!--VII Ends-->
    <!--Navbar-->
    <div class="pos-f-t fixed-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-fixed-top" id="navbar">
            <a class="navbar-brand" href="/">POS Tesis</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Sell/SellingMainPage">Vender</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/ProductsMain">Productos</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Inventario
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="/Inventory/InventoryHistory">Historial de movimientos</a>
                            <a class="dropdown-item" href="/Inventory/InventoryMain">Movimiento de inventario</a>
                            <a class="dropdown-item" href="/Inventory/InventoryAI">Predictor de inventario</a>
                        </div>
                    </li>

                </ul>
            </div>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin") || User.IsInRole("ShopAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Users/SignIn">Crear Usuario</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

    </div>
    <!--Navbar ends-->

    <div class="container-fluid body-content">

        @RenderBody()

        <footer class="footer footerBottom">
            <hr />
            <p>&copy; 2020 - Tesis</p>
        </footer>
    </div>

</body>
</html>
