
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:70px; margin-bottom:30vh">
    <div style="margin-top:30vh">
        <div class="text-center">
            <form class="form-signin" method="POST" action="/Users/ChangePassword">

                <div class="loginVIIR">
                    <div class="loginContentVII">
                        <div class="loginHeader">
                            <h4 class="modal-title">Cambio de contraseña</h4>
                            <br />
                        </div>
                        <div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" class="form-control" id="UserName" name="UserName" required autofocus placeholder="Usuario">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="password" class="form-control" id="Password" name="Password" required autofocus placeholder="Contraseña">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required autofocus placeholder="Confirmar contraseña">
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block btn-lg">Cambiar contraseña</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>