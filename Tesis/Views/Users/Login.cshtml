
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:70px; margin-bottom:30vh">
    <div style="margin-top:30vh">
        <div class="text-center">
            <form class="form-signin" method="POST" action="/Users/Login">
                <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesión</h1>
                <label for="user" class="sr-only">Usuario</label>
                <input style="box-sizing:border-box; margin-bottom:-1px; padding:10px; width:250px; margin-left:37%" type="text" class="form-control" placeholder="Usuario" id="UserName" name="UserName" required autofocus>
                <label for="contraseña" class="sr-only">Password</label>
                <input style="padding:10px; width:250px;  margin-left:37%" type="password" class="form-control" placeholder="Contraseña" id="Password" name="Password" required>
                <div class="checkbox mb-3">
                    <label>
                        <a href="/Users/SignIn">Crear usuario</a> 
                    </label>
                </div>
                <button class="btn btn-lg btn-primary" type="submit">Ingresar</button>
                
            </form>
        </div>
    </div>
</div>