
@{
    ViewData["Title"] = "RequestChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:70px; margin-bottom:30vh">
    <div style="margin-top:30vh">
        <div class="text-center">
            <form class="form-signin" method="POST" action="/Users/RequestChangePassword">
                <h1 class="h3 mb-3 font-weight-normal">Cambiar contraseña</h1>

                <!-- Username -->
                <label for="user" class="sr-only">Usuario</label>
                <input style="box-sizing:border-box; margin-bottom:-1px; padding:10px; width:250px; margin-left:37%" type="text" class="form-control" placeholder="Usuario" id="UserName" name="UserName" required autofocus>

                <button class="btn btn-lg btn-primary" type="submit"> Cambiar contraseña </button>

            </form>
        </div>
    </div>
</div>